div
    h1 Edit album
    form(method='POST' action='/albums/#{album._id}/edit?_method=PUT')
        div.form-group
            label(for='artistTextID') Artist: &nbsp;
            input#artistTextID.form-control(type='text' placeholder='Artist' name='artist')
        div.form-group
            label(for='albumTextID') Album:
            input#albumTextID.form-control(type='text' placeholder='Album' name='album')
        div.form-group
            label(for='genreTextID') Genre: &nbsp;
            input#genreTextID.form-control(type='text' placeholder='Genre' name='genre')
        div.form-group
            input#btnUpdate.form-control(type='submit' value='Update Album')
